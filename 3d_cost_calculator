  <script>
    function calculateCost() {
      // Получаем значения из полей ввода
      const mass = parseFloat(document.getElementById('mass').value) || 0;
      const materialPrice = parseFloat(document.getElementById('materialPrice').value) || 0;
      const time = parseFloat(document.getElementById('time').value) || 0;
      const power = parseFloat(document.getElementById('power').value) || 0;
      const tariff = parseFloat(document.getElementById('tariff').value) || 0;
      const printerCost = parseFloat(document.getElementById('printerCost').value) || 0;
      const resource = parseFloat(document.getElementById('resource').value) || 1;
      const operatorRate = parseFloat(document.getElementById('operatorRate').value) || 0;
      const operatorTime = parseFloat(document.getElementById('operatorTime').value) || 0;
      const extraRate = parseFloat(document.getElementById('extraRate').value) / 100 || 0;

      // Выполняем расчеты
      const materialCost = (mass / 1000) * materialPrice;
      const energyCost = power * time * tariff;
      const amortizationCost = (printerCost / resource) * time;
      const laborCost = operatorRate * operatorTime;
      const baseCost = materialCost + energyCost + amortizationCost + laborCost;
      const extraCost = baseCost * extraRate;
      const totalCost = baseCost + extraCost;

      // Обновляем интерфейс с результатами
      document.getElementById('totalCost').textContent = `${totalCost.toFixed(2)} руб`;
      document.getElementById('materialCost').textContent = `${materialCost.toFixed(2)} руб`;
      document.getElementById('energyCost').textContent = `${energyCost.toFixed(2)} руб`;
      document.getElementById('amortizationCost').textContent = `${amortizationCost.toFixed(2)} руб`;
      document.getElementById('laborCost').textContent = `${laborCost.toFixed(2)} руб`;
      document.getElementById('extraCost').textContent = `${extraCost.toFixed(2)} руб`;

      // Создаем визуализацию структуры затрат
      createCostChart(materialCost, energyCost, amortizationCost, laborCost, extraCost, totalCost);
    }

    function createCostChart(material, energy, amortization, labor, extra, total) {
      const chartContainer = document.getElementById('costChart');
      chartContainer.innerHTML = '';

      if (total === 0) return;

      const costs = [
        { name: 'Материалы', value: material, color: '#3498db' },
        { name: 'Электроэнергия', value: energy, color: '#e74c3c' },
        { name: 'Амортизация', value: amortization, color: '#f39c12' },
        { name: 'Трудозатраты', value: labor, color: '#9b59b6' },
        { name: 'Доп. расходы', value: extra, color: '#1abc9c' }
      ];

      costs.forEach(cost => {
        const percent = total > 0 ? (cost.value / total) * 100 : 0;
        
        const barElement = document.createElement('div');
        barElement.className = 'chart-bar';
        
        barElement.innerHTML = `
          <div class="chart-label">${cost.name}</div>
          <div class="chart-value" style="width: ${percent}%; background-color: ${cost.color};"></div>
          <div class="chart-percent">${percent.toFixed(1)}%</div>
        `;
        
        chartContainer.appendChild(barElement);
      });
    }

    function setPreset(type) {
      if (type === 'desktop') {
        document.getElementById('power').value = 0.12;
        document.getElementById('printerCost').value = 50000;
        document.getElementById('resource').value = 2000;
        document.getElementById('operatorRate').value = 300;
      } else if (type === 'industrial') {
        document.getElementById('power').value = 1.5;
        document.getElementById('printerCost').value = 500000;
        document.getElementById('resource').value = 10000;
        document.getElementById('operatorRate').value = 500;
      }
      
      // Пересчитываем после установки пресета
      calculateCost();
    }

    // Инициализация расчета при загрузке страницы
    window.onload = calculateCost;
  </script>
</body>
